<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        app:cardCornerRadius="@dimen/five_dp"
        android:elevation="@dimen/three_dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/three_dp"
        android:background="@color/gray_smoke"
        >

        <TextView
            android:id="@+id/custDashName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/lightBlue"
            />

        <TextView
            android:id="@+id/custDashMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9876543219"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/custDashName"
            android:textStyle="bold"
            android:textColor="@color/dmiie_yellow"
            />

        <LinearLayout
            android:id="@+id/custDashView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_below="@+id/custDashMobile"
            android:layout_margin="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custDashPurchaseTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dmiie_blue"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Purchase Date"
                />

            <TextView
                android:id="@+id/custDashStatusTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sataus"
                android:textColor="@color/dmiie_blue"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/custDashFollowTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next Follow up"
                android:textStyle="bold"
                android:textColor="@color/dmiie_blue"
                android:gravity="center" />




        </LinearLayout>


        <LinearLayout
            android:id="@+id/custDashDataView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_below="@+id/custDashView"
            android:layout_margin="@dimen/three_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custDashPurchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center"
                android:text="07-06-2021"
                />

            <TextView
                android:id="@+id/custDashStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Active"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/custDashFollow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="07-06-2021"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:gravity="center" />




        </LinearLayout>




    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>