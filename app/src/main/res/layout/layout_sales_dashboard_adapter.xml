<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/five_dp"
        android:layout_margin="@dimen/five_dp"
        android:elevation="@dimen/five_dp"
        android:padding="@dimen/three_dp"
        android:background="@color/gray_smoke"
        >

    <LinearLayout
        android:id="@+id/tabularSalesView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="6"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/five_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/salesCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="left"
            android:text="Saravana"
            />

        <TextView
            android:id="@+id/salesMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/salesCustomerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="5"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center" />


        <TextView
            android:id="@+id/salesSample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center" />


        <TextView
            android:id="@+id/salesPriceList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>